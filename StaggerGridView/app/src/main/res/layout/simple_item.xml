<?xml version="1.0" encoding="utf-8"?>
<com.andhradroid.app.staggergridview.DynamicHeightImageView xmlns:android="http://schemas.android.com/apk/res/android"
                                                            android:orientation="vertical"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:text="Title"
        android:textSize="22sp"
        android:layout_height="match_parent"
        android:id="@+id/simple_text"/>


    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">
        <com.andhradroid.app.staggergridview.DynamicHeightImageView1
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:src="@drawable/profile"
            android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>


</com.andhradroid.app.staggergridview.DynamicHeightImageView>